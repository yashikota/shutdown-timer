<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="shutdown_timer.Dialogs.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="アプリケーション情報"
    CloseButtonText="閉じる"
    DefaultButton="Close">

    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="600">
        <StackPanel Spacing="24" Margin="0,8,0,0" MaxWidth="500">

            <!-- App Icon and Name -->
            <StackPanel HorizontalAlignment="Center" Spacing="16">
                <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                        CornerRadius="12"
                        Width="64"
                        Height="64"
                        HorizontalAlignment="Center">
                    <FontIcon FontFamily="Segoe Fluent Icons"
                             Glyph="&#xE916;"
                             FontSize="32"
                             Foreground="White"/>
                </Border>

                <StackPanel HorizontalAlignment="Center" Spacing="4">
                    <TextBlock x:Name="AppNameText"
                             Text="シャットダウンタイマー"
                             FontSize="24"
                             FontWeight="SemiBold"
                             HorizontalAlignment="Center"/>
                    <TextBlock x:Name="VersionText"
                             Text="バージョン 2.0.0"
                             FontSize="14"
                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>



            <!-- System Requirements -->
            <StackPanel Spacing="8">
                <TextBlock x:Name="SystemRequirementsHeader"
                          Text="System Requirements"
                          FontWeight="SemiBold"
                          FontSize="16"/>
                <StackPanel Spacing="4">
                    <TextBlock x:Name="Requirement1Text" Text="• Windows 10 version 1809 or later" FontSize="14"/>
                    <TextBlock x:Name="Requirement2Text" Text="• Windows 11 (recommended)" FontSize="14"/>
                    <TextBlock x:Name="Requirement3Text" Text="• .NET 8.0 Runtime" FontSize="14"/>
                    <TextBlock x:Name="Requirement4Text" Text="• Administrator privileges" FontSize="14"/>
                </StackPanel>
            </StackPanel>



            <!-- Links -->
            <StackPanel Spacing="8">
                <TextBlock x:Name="LinksHeader"
                          Text="Links"
                          FontWeight="SemiBold"
                          FontSize="16"/>
                <StackPanel Spacing="8">
                    <HyperlinkButton x:Name="GitHubLink"
                                   Content="GitHub Repository"
                                   NavigateUri="https://github.com/yashikota/shutdown-timer"/>
                    <HyperlinkButton x:Name="IssuesLink"
                                   Content="Bug Reports and Feature Requests"
                                   NavigateUri="https://github.com/yashikota/shutdown-timer/issues"/>

                </StackPanel>
            </StackPanel>

            <!-- Copyright -->
            <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                    CornerRadius="4"
                    Padding="12">
                <TextBlock x:Name="CopyrightText"
                          Text="© 2025 yashikota. All rights reserved."
                          FontSize="12"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          HorizontalAlignment="Center"/>
            </Border>

        </StackPanel>
    </ScrollViewer>
</ContentDialog>
