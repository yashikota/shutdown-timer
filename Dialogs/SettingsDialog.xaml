<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="shutdown_timer.Dialogs.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="設定"
    PrimaryButtonText="保存"
    CloseButtonText="キャンセル"
    DefaultButton="Primary">

    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
        <StackPanel Spacing="24" Margin="0,8,0,0">

            <!-- Language Settings -->
            <StackPanel Spacing="8">
                <TextBlock x:Name="LanguageSettingsHeader"
                          Text="Language Settings"
                          FontWeight="SemiBold"
                          FontSize="16"/>
                <ComboBox x:Name="LanguageComboBox"
                         MinWidth="200"
                         SelectionChanged="LanguageComboBox_SelectionChanged">
                    <ComboBoxItem Content="日本語" Tag="ja"/>
                    <ComboBoxItem Content="English" Tag="en"/>
                </ComboBox>
            </StackPanel>

            <!-- Theme Settings -->
            <StackPanel Spacing="8">
                <TextBlock x:Name="ThemeSettingsHeader"
                          Text="Theme Settings"
                          FontWeight="SemiBold"
                          FontSize="16"/>
                <RadioButtons x:Name="ThemeRadioButtons" SelectionChanged="ThemeRadioButtons_SelectionChanged">
                    <RadioButton x:Name="SystemDefaultRadio" Content="Follow system settings" Tag="Default"/>
                    <RadioButton x:Name="LightThemeRadio" Content="Light theme" Tag="Light"/>
                    <RadioButton x:Name="DarkThemeRadio" Content="Dark theme" Tag="Dark"/>
                </RadioButtons>
            </StackPanel>



            <!-- Reset Settings -->
            <StackPanel Spacing="8">
                <TextBlock x:Name="ResetSettingsHeader"
                          Text="Reset"
                          FontWeight="SemiBold"
                          FontSize="16"/>
                <Button x:Name="ResetSettingsButton"
                       Content="Reset settings"
                       Click="ResetSettingsButton_Click"
                       Style="{StaticResource DefaultButtonStyle}"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</ContentDialog>
